pkgname=cereal
pkgver=1.3.0
pkgrel=0
pkgdesc="A C++11 library for serialization "
license="https://raw.githubusercontent.com/USCiLab/cereal/master/LICENSE"
arch=x86_64
url="https://github.com/USCiLab/cereal"
source="https://codeload.github.com/USCiLab/cereal/tar.gz/refs/tags/v1.3.0"
makedepends="cmake"

unpack() {
    cd $srcdir
    tar -xf v1.3.0
}

build() {
    cd $builddir
    mkdir build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX="$pkgdir" -DJUST_INSTALL_CEREAL=ON -DWITH_WERROR=OFF
}

package() {
    cd $builddir/build
    make
    make install
}
sha512sums="
