pkgname=immer
pkgver=0.7.0
pkgrel=0
pkgdesc="Postmodern immutable and persistent data structures for C++ â€” value semantics at scale"
license=BSL-1.0
arch=x86_64
url="sinusoid.es/immer/"
source="https://codeload.github.com/arximboldi/immer/tar.gz/refs/tags/v0.7.0"
makedepends="cmake"

unpack() {
    cd $srcdir
    tar -xf v0.7.0
}

build() {
    mkdir ${builddir}/build
    cd ${builddir}/build
    cmake .. -DCMAKE_INSTALL_PREFIX="$pkgdir" -Dimmer_BUILD_TESTS=OFF -Dimmer_BUILD_EXAMPLES=OFF -Dimmer_BUILD_DOCS=OFF -Dimmer_BUILD_EXTRAS=OFF
    make
}

package() {
    cd ${builddir}/build
    make install
}
